<?xml version="1.0"?>
<ruleset name="myproject">
	<description>Generally-applicable sniffs for WordPress plugins</description>

	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
	</rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<!-- List of text domains used in your plugin and theme -->
				<element value="imdb-plugin" />
				<element value="screen-time" />
				<element value="rtcamp" />
				<element value="imdb-plugin-test" />
				<element value="post-emberder" />
			</property>
		</properties>
	</rule>

	<!-- <rule ref="WordPress-VIP-Go" /> -->
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />
	<rule ref="PHPCompatibilityWP"/>

	<config name="testVersion" value="8.0-"/>

	<arg name="extensions" value="php"/>
	<arg value="s"/>

	<exclude-pattern>*/dev-lib/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/twentytwentyone/*</exclude-pattern>
	<exclude-pattern>*/mu-plugins/*</exclude-pattern>
	<exclude-pattern>*/rt-config/*</exclude-pattern>
	<exclude-pattern>*/imdb-plugin-test/*</exclude-pattern>
	<exclude-pattern>*/wp-content/index.php</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>.github/</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>

	<ini name="error_reporting" value="E_ALL &#38; ~E_DEPRECATED" />
</ruleset>
